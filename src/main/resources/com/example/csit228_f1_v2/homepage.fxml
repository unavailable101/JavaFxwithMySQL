<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="home" prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: BLACK;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.csit228_f1_v2.HomeController">
   <children>
      <ToggleButton fx:id="tbNight" layoutX="32.0" layoutY="276.0" mnemonicParsing="false" onAction="#onNightModeClick" text="DAY" />
      <Button fx:id="logout" layoutX="32.0" layoutY="239.0" mnemonicParsing="false" onAction="#onLogout" text="Logout" />
      <Button fx:id="tbChangeUsername" layoutX="30.0" layoutY="131.0" mnemonicParsing="false" onAction="#onChangeUsername" text="Change Username" />
      <Button fx:id="changePassword" layoutX="31.0" layoutY="167.0" mnemonicParsing="false" onAction="#onChangePassword" text="Change Password" />
      <Button fx:id="deleteAccnt" layoutX="31.0" layoutY="203.0" mnemonicParsing="false" onAction="#onDeleteAccount" text="Delete Account" />
      <Label fx:id="txtUsername" layoutX="30.0" layoutY="74.0" text="username" textFill="WHITE">
         <font>
            <Font name="Roboto Thin" size="30.0" />
         </font>
      </Label>
      <Label fx:id="txtTitle" layoutX="23.0" layoutY="20.0" text="SELFNote" textFill="WHITE">
         <font>
            <Font name="Monospaced Regular" size="60.0" />
         </font></Label>
      <TabPane layoutX="205.0" layoutY="128.0" prefHeight="348.0" prefWidth="473.0" style="-fx-border-color: BLACK; -fx-background-radius: 21;" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Your notes to self">
            <content>
              <AnchorPane fx:id="apYourNotes" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" style="-fx-background-color: #F3F3F3; -fx-border-radius: 21;" />
            </content>
          </Tab>
          <Tab text="Create note to self">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" style="-fx-background-color: #F3F3F3; -fx-border-radius: 21;">
                     <children>
                        <Label layoutX="64.0" layoutY="71.0" text="Title: ">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <Label layoutX="30.0" layoutY="106.0" text="Contents: ">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="taNoteContents" layoutX="102.0" layoutY="106.0" prefHeight="178.0" prefWidth="246.0" wrapText="true" />
                        <TextField fx:id="tfNoteTitle" layoutX="102.0" layoutY="71.0" prefHeight="25.0" prefWidth="243.0" />
                        <Label layoutX="12.0" layoutY="14.0" text="New SELFNote">
                           <font>
                              <Font size="30.0" />
                           </font>
                        </Label>
                        <Button fx:id="btnCreateNote" layoutX="364.0" layoutY="259.0" mnemonicParsing="false" onAction="#onCreateNote" text="Create Note" />
                     </children></AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
