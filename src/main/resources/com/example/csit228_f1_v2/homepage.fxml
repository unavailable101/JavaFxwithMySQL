<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="home" prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: BLACK;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.csit228_f1_v2.HomeController">
   <children>
      <ToggleButton fx:id="tbNight" layoutX="33.0" layoutY="311.0" mnemonicParsing="false" onAction="#onNightModeClick" text="DAY" />
      <Button fx:id="logout" layoutX="32.0" layoutY="275.0" mnemonicParsing="false" onAction="#onLogout" text="Logout" />
      <Button fx:id="btnDeleteAllNotes" layoutX="32.0" layoutY="239.0" mnemonicParsing="false" onAction="#onDeleteAllNotes" text="Delete All Notes" />
      <Button fx:id="deleteAccnt" layoutX="31.0" layoutY="203.0" mnemonicParsing="false" onAction="#onDeleteAccount" text="Delete Account" />
      <Button fx:id="changePassword" layoutX="31.0" layoutY="167.0" mnemonicParsing="false" onAction="#onChangePassword" text="Change Password" />
      <Button fx:id="tbChangeUsername" layoutX="30.0" layoutY="131.0" mnemonicParsing="false" onAction="#onChangeUsername" text="Change Username" />
      <Label fx:id="lblUsername" layoutX="30.0" layoutY="74.0" text="username" textFill="WHITE">
         <font>
            <Font name="Roboto Thin" size="30.0" />
         </font>
      </Label>
      <Label fx:id="txtTitle" layoutX="23.0" layoutY="20.0" text="SELFNote" textFill="WHITE">
         <font>
            <Font name="Monospaced Regular" size="60.0" />
         </font></Label>
      <TabPane layoutX="205.0" layoutY="128.0" prefHeight="348.0" prefWidth="473.0" style="-fx-border-color: BLACK; -fx-background-radius: 21;" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Your notes to self">
            <content>
              <AnchorPane fx:id="apYourNotes" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" style="-fx-background-color: #F3F3F3; -fx-border-radius: 21; -fx-padding: 100;">
                     <padding>
                        <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
                     </padding>
                     <children>
                        <VBox fx:id="vbOutput" layoutX="12.0" layoutY="14.0" prefHeight="292.0" prefWidth="447.0" />
                        <AnchorPane fx:id="apViewNotes" layoutX="14.0" layoutY="14.0" prefHeight="291.0" prefWidth="447.0" visible="false">
                           <children>
                              <Line endX="311.0" layoutX="115.0" layoutY="62.0" startX="-100.0" />
                              <TextField fx:id="tfNoteTitle_view" layoutX="15.0" layoutY="12.0" prefHeight="42.0" prefWidth="412.0" promptText="Title">
                                 <font>
                                    <Font size="20.0" />
                                 </font>
                              </TextField>
                              <TextArea fx:id="taNoteContents_view" layoutX="13.0" layoutY="72.0" prefHeight="174.0" prefWidth="417.0" promptText="contents" wrapText="true" />
                              <Button fx:id="btnSaveChanges" layoutX="15.0" layoutY="256.0" mnemonicParsing="false" text="Save Changes" />
                              <Button fx:id="btnDelete_view" layoutX="113.0" layoutY="256.0" mnemonicParsing="false" text="Delete" />
                              <Button fx:id="btnClose_view" layoutX="172.0" layoutY="256.0" mnemonicParsing="false" onAction="#onCloseViewNote" text="Close" />
                           </children>
                        </AnchorPane>
                     </children></AnchorPane>
            </content>
          </Tab>
          <Tab text="Create note to self">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" style="-fx-background-color: #F3F3F3; -fx-border-radius: 21;">
                     <children>
                        <Label layoutX="12.0" layoutY="14.0" text="New SELFNote">
                           <font>
                              <Font size="30.0" />
                           </font>
                        </Label>
                        <Label layoutX="64.0" layoutY="71.0" text="Title: ">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="taNoteContents" layoutX="102.0" layoutY="106.0" prefHeight="178.0" prefWidth="246.0" wrapText="true" />
                        <Label layoutX="30.0" layoutY="106.0" text="Contents: ">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <TextField fx:id="tfNoteTitle" layoutX="102.0" layoutY="71.0" prefHeight="25.0" prefWidth="243.0" />
                        <Button fx:id="btnCreateNote" layoutX="364.0" layoutY="259.0" mnemonicParsing="false" onAction="#onCreateNote" text="Create Note" />
                     </children></AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
